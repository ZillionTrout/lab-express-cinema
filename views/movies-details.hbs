<div style="width: 500px;">
    <div>
        <a href="/movies" class="buttoncheck">Go back</a>
    </div>
    <div>
        <div>
            <img src="{{movies.image}}" alt="{{movies}}">
            <h3>{{movies.title}}</h3>
            <h4>{{movies.director}}</h4>
            <h4>Stars</h4>
            <ul>
                {{#each movies.stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{movies.description}}</p>
            <p>
                {{#each movies.showtimes}}
                {{this}}
                {{/each}}
            </p>
        </div>
    </div>
</div>